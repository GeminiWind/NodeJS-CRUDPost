    #login-page
      .container
        form.form-login(method='post',action='/reset/' + token)
          h2.form-login-heading Update Password
          if messages.error
            .alert.alert-danger
              div= messages.error
          if messages.info
            .alert.alert-info
              div= messages.info
          if messages.success
            .alert.alert-success
              div= messages.success
          .login-wrap
            input(type='hidden', name='_csrf', value=_csrf)
            input.form-control(type='password', name='password', value='', placeholder='New password', autofocus=true)
            br
            input.form-control(type='password', name='confirm', value='', placeholder='Confirm password')
            button.btn.btn-theme.btn-block(type='submit')
              i.fa.fa-lock
              |  Update Password
