extends ./../layout/desktop.pug
block js_head
  script(src="/js/chat.js")
block content
     section#main-content
        section.wrapper.site-min-height
          h3
            i.fa.fa-angle-right
            |  Chat Box
          .row.mt
            .col-lg-12
              .form-panel
                h4.mb
                  i.fa.fa-angle-right
                  |  Chat Room
                ul#chat_area
                  each chat in chats
                    li
                      p
                        h4 From #{chat.author[0].email}
                      p #{chat.content}
                form.form-horizontal.style-form(action='/chats','method'='post')
                  .form-group
                    label.col-sm-2.col-sm-2.control-label Type here
                    .col-sm-10
                      input(type='hidden', name='_csrf', value=_csrf)
                      input.form-control(type='text', name='content', id="content_chat")
                  button.btn.btn-primary(type='submit') Send
