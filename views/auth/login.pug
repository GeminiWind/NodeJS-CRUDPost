    #login-page
      .container
        form.form-login(method='post',action='/login', enctype="application/x-www-form-urlencoded")
          h2.form-login-heading sign in now
          .login-wrap
            input.form-control(type='email', placeholder='Your Email', name='email')
            br
            input.form-control(type='password', placeholder='Password', name='password')
            label.checkbox
              span.pull-right
                a(data-toggle='modal', href='login.html#myModal')  Forgot Password?
            button.btn.btn-theme.btn-block(type='submit')
              i.fa.fa-lock
              |  SIGN IN
            hr
            .login-social-link.centered
              p or you can sign in via your social network
              a.btn.btn-facebook(href='/facebook')
                i.fa.fa-facebook
                |  Facebook
              a.btn.btn-twitter(href='/google')
                i.fa.fa-twitter
                |  Google
            .registration
              | Don&apos;t have an account yet?
              br
              a(href='/register')
                | Create an account
